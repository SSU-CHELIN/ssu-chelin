<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 배경 색상 설정 (50% 투명도) -->
            <solid android:color="#FFFFFF" /> <!-- #80은 50% 투명도 -->

            <!-- 둥근 모서리 설정 -->
            <corners android:radius="12dp" />

            <!-- 테두리 설정 -->
            <stroke
                android:width="2dp"
                android:color="#44000000" />
        </shape>
    </item>
</selector>