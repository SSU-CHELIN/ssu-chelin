<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/review_item_background"
        android:padding="12dp"
        tools:ignore="MissingConstraints">

        <!-- 리뷰 상단 (프로필, 별점, 수정 버튼) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 프로필 사진 -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/none_pro"
                android:contentDescription="Profile Picture"
                android:backgroundTint="#CCCCCC"
                android:scaleType="centerCrop" />

            <!-- 이름과 별점 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/review_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최정인"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/review_star1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/review_star2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/review_star3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/star" />
                </LinearLayout>
            </LinearLayout>

            <!-- 수정 버튼 -->
            <TextView
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textColor="#FF5722"
                android:padding="8dp"
                android:textSize="12sp"
                android:clickable="true" />
        </LinearLayout>

        <!-- 간/맵기/알레르기 정보 -->
        <TextView
            android:id="@+id/review_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간 정도 : 3 / 맵기 정도 : 3 / 알레르기 : X"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- 리뷰 내용 -->
        <TextView
            android:id="@+id/review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맛있어요 ^^"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>