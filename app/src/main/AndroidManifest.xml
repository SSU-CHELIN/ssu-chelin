<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ssuchelin"
        tools:targetApi="34">

        <!-- FirstloginActivity 설정: 앱 실행 시 가장 먼저 실행되는 액티비티 -->
        <activity
            android:name=".FirstloginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 나머지 액티비티 선언 -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".ProfileViewActivity"
            android:exported="true" />

        <activity
            android:name=".BaseActivity"
            android:exported="true" />

        <activity
            android:name=".MainViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="ssuchelin" android:host="callback" />
            </intent-filter>
        </activity>


        <activity
            android:name=".FeedbackActivity"
            android:exported="true" />

        <activity
            android:name=".CheckReviewsActivity"
            android:exported="true" />

        <activity
            android:name=".FirstSettingActivity"
            android:exported="true" />

        <activity
            android:name=".ChangeProfilePictureActivity"
            android:exported="true" />

        <activity
            android:name=".ChangeContactActivity"
            android:exported="true" />

        <activity
            android:name=".ChangeNicknameActivity"
            android:exported="true" />

        <activity
            android:name=".InitialSettingActivity"
            android:exported="true" />

        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <activity
            android:name=".RankingActivity"
            android:exported="true" />

        <activity
            android:name=".ReviewActivity"
            android:exported="true" />

        <!-- 추가된 누락된 액티비티들 -->
        <activity
            android:name=".EditReviewActivity"
            android:exported="true" />


        <activity
            android:name=".PersonalActivity"
            android:exported="true" />

        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".UsaintAuthService"
            android:exported="true" />

        <activity
            android:name=".UsaintRegisterActivity"
            android:exported="true" />

        <activity
            android:name=".UserProfileActivity"
            android:exported="true" />
    </application>

</manifest>
